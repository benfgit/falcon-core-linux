{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python GUI Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/falcon-gui-python/run_gui.py",
            "cwd": "${workspaceFolder}/falcon-gui-python",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "${workspaceFolder}/falcon-gui-python/.venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/falcon-gui-python/src"
            }
        },
       {
            "name": "Falcon Debug (gdb) â€“ External",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/falcon",
            "args": ["neuralynx/nlx_test_save.yaml"],
            "cwd": "${workspaceFolder}/build/debug",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "make",
            "setupCommands": [
                {
                    "description": "Enable pretty printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ]
        },
        {
            "name": "nlxtestbench debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/nlxtestbench",
            "args": [
                "-c",
                "nlxtestbench.yaml"
                // "ncs_file.yaml"
            ],
            "cwd": "${workspaceFolder}/build/debug",
            "externalConsole": true,
            "preLaunchTask": "make",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ] 

        }
    ]
}
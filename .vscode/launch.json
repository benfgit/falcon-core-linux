{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python GUI Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/falcon-gui-python/run_gui.py",
            "cwd": "${workspaceFolder}/falcon-gui-python",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "${workspaceFolder}/falcon-gui-python/.venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/falcon-gui-python/src"
            }
        },
        {
            "name": "falcon debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/falcon",
            "args": [
                "neuralynx/nlx_test_save.yaml"
            ],
            "targetArchitecture": "arm64",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/debug",
            "externalConsole": true,
            "MIMode": "lldb",
            "preLaunchTask": "make",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "nlxtestbench debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/nlxtestbench",
            "args": [
                "-c",
                "nlxtestbench.yaml"
                // "ncs_file.yaml"
            ],
            "targetArchitecture": "arm64",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/debug",
            "externalConsole": true,
            "MIMode": "lldb",
            "preLaunchTask": "make",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}